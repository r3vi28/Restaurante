
@page "/clientes"
<h1>Clientes</h1>
<button @onclick="Agregar" class="btn btn-success" style="margin-bottom: 5px;">Agregar</button>
@if(Clientes != null)
{
    
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direcci√≥n</th>
                <th>Telefono</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Clientes)
            {
                <tr>
                    <td>@cliente.Id</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Direccion</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic outlined example">
                            <button class="btn btn-outline-warning" @onclick="()=>Editar(cliente.Id)">Editar</button>
                            <button class="btn btn-outline-danger">Eliminar</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Cargando...</p>
}

@code
{
    public List<ClienteRecord>? Clientes { get; set; }
    protected override async Task OnInitializedAsync()
    {
        var response = await clientesManager.GetAsync();
        if(response.Succeeded){
            Clientes = response.Items.ToList();
        }
    }

    public void Agregar()
    {
        urlHelper.NavigateTo("/cliente/crear",false);
    }

    public void Editar(int Id)
    {
        urlHelper.NavigateTo($"/cliente/editar/{Id}",false);
    }
}

